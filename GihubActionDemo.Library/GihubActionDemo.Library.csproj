<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Product>GihubActionDemo.Library</Product>
    <Title>GihubActionDemo.Library</Title>
    <RootNamespace>GihubActionDemo.Library</RootNamespace>
    <AssemblyName>GihubActionDemo.Library</AssemblyName>
    <Version>0.0.4</Version>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <PackageReleaseNotes>$([System.IO.File]::ReadAllText("$(MSBuildProjectDirectory)/../RELEASE-NOTES"))</PackageReleaseNotes>
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>GihubActionDemo</PackageId> 
    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>https://github.com/a7mdfre7at/GihubActionDemo</RepositoryUrl>
    <Description>Just a Github actions demo pkg [Nuget Registery github action]</Description>
    <PackageProjectUrl>https://github.com/a7mdfre7at/GihubActionDemo</PackageProjectUrl>
  </PropertyGroup>

  <Target Name="PrepareReleaseNotes" BeforeTargets="GenerateNuspec">
    <PropertyGroup>
      <PackageReleaseNotes>$([System.IO.File]::ReadAllText("$(MSBuildProjectDirectory)/../RELEASE-NOTES"))</PackageReleaseNotes>
    </PropertyGroup>
  </Target>
  
</Project>
